<h2>User info</h2>
<%= image_tag @user.get_profile_image(100,100) %><br>
  <table>
    <tbody>
      <tr>name</tr>
      <tr><%= @user.name %></tr><br>
      <tr>introduction</tr>
      <tr><%= @user.introduction %></tr>
    </tbody>
  </table>

  <div><%= link_to "edit",edit_user_path %></div>

  <h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    <label>Opinion</label><br>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>
  <% end %>

  <h2>Books</h2>
    <table>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image(100,100) %><br>
            <%= book.user.name %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
