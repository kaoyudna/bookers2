<%= render 'home', user: @user , book: @book %>
  <h2>Books</h2>
    <table>
      <thead>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </thead>
      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td>
            <%= image_tag book.user.get_profile_image(100,100) %><br>
            <%= book.user.name %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
