<%= render 'users/home', user: @user , book: @book %>

<h2>Bookers</h2>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
<% @books.each do |books| %>
      <tr>
        <td><%= image_tag books.user.get_profile_image(100,100) %></td>
        <td><%= link_to "#{books.title}",book_path(books.id)  %></td>
        <td><%= books.body %></td>
      </tr>
<% end %>
    </tbody>
  </table>

